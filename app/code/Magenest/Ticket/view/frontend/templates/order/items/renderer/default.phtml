/** @var  $block \Magento\Sales\Block\Order\Item\Renderer\DefaultRenderer */
$_item = $block->getItem();
?>
<tr id="order-item-row-<?php /* @escapeNotVerified */ echo $_item->getId() ?>">
    <td class="col name" data-th="<?php echo $block->escapeHtml(__('Product Name')); ?>">
        <strong class="product name product-item-name"><?php echo $block->escapeHtml($_item->getName()) ?></strong>
        <?php if ($_options = $block->getItemOptions()): ?>
            <dl class="item-options">
                <?php foreach ($_options as $_option) : ?>
                    <dt><?php echo $block->escapeHtml($_option['label']) ?></dt>
                    <?php if (!$block->getPrintStatus()): ?>
                        <?php $_formatedOptionValue = $block->getFormatedOptionValue($_option) ?>
                        <dd>
                            <?php if (isset($_formatedOptionValue['full_view'])): ?>
                                <?php /* @escapeNotVerified */ echo $_formatedOptionValue['full_view'] ?>
                            <?php else: ?>
                                <?php /* @escapeNotVerified */ echo $_formatedOptionValue['value'] ?>
                            <?php endif; ?>
                        </dd>
                    <?php else: ?>
                        <dd>
                            <?php echo nl2br($block->escapeHtml((isset($_option['print_value']) ? $_option['print_value'] : $_option['value']))) ?>
                        </dd>
                    <?php endif; ?>
                <?php endforeach; ?>
            </dl>
        <?php endif; ?>
        <?php $addtInfoBlock = $block->getProductAdditionalInformationBlock(); ?>
        <?php if ($addtInfoBlock) :?>
            <?php echo $addtInfoBlock->setItem($_item)->toHtml(); ?>
        <?php endif; ?>
        <?php echo $block->escapeHtml($_item->getDescription()) ?>
        <?php if ($_item->getProductType() == 'ticket') { ?>
            <?php if ($_item->getProductOptions()): ?>
                <dl class="item-options">
                    <?php foreach ($_item->getProductOptions() as $_option): ?>
                        <?php if (isset($_option['additional_options']) && !empty($_option['additional_options'])) {?>
                            <div class="product-option-block">
                                <?php $data = $block->getDataTicket($_option['additional_options']); ?>
                                <?php if (!empty($data['location_title'])) {?>
                                    <span><?php echo 'Location :'.$data['location_title']; ?></span><br>
                                <?php } ?>
                                <?php if (!empty($data['date'])) {?>
                                    <span><?php echo 'Date :'.$data['date']; ?></span><br>
                                <?php } ?>
                                <?php if (!empty($data['start_time']) || !empty($data['end_time'])) {?>
                                    <span><?php echo 'Time :'.$data['start_time'].$data['end_time']; ?></span><br>
                                <?php } ?>
                                <span> <?php echo __('Option select :') ?>  </span>
                                <?php if (isset($_option['additional_options']['dropdow']) && !empty($_option['additional_options']['dropdow'])) {?>
                                    <span><?php echo $_option['additional_options']['dropdow'].', ' ?></span>
                                <?php } ?>
                                <?php if (isset($_option['additional_options']['radio']) && !empty($_option['additional_options']['radio'])) {?>
                                    <?php $radio = explode("_",$_option['additional_options']['radio']['radio_select']); ?>
                                    <span><?php echo $radio[1].', ' ?></span>
                                <?php } ?>
                                <?php if (isset($_option['additional_options']['checkbox']) && !empty($_option['additional_options']['checkbox'])) {?>
                                    <?php
                                    $array = json_decode($_option['additional_options']['checkbox'], true);
                                    foreach ($array as $type=>$price) {?>
                                        <span><?php echo $type.', ' ?></span>
                                    <?php } ?>
                                <?php } ?>
                                <br>
                            </div>
                        <?php } ?>
                    <?php endforeach; ?>
                </dl>
            <?php endif; ?>
        <?php } ?>
    </td>
    <td class="col sku" data-th="<?php echo $block->escapeHtml(__('SKU')); ?>"><?php /* @escapeNotVerified */ echo $block->prepareSku($block->getSku()) ?></td>
    <td class="col price" data-th="<?php echo $block->escapeHtml(__('Price')); ?>">
        <?php echo $block->getItemPriceHtml(); ?>
    </td>
    <td class="col qty" data-th="<?php echo $block->escapeHtml(__('Qty')); ?>">
        <ul class="items-qty">
            <?php if ($block->getItem()->getQtyOrdered() > 0): ?>
                <li class="item">
                    <span class="title"><?php /* @escapeNotVerified */ echo __('Ordered'); ?></span>
                    <span class="content"><?php /* @escapeNotVerified */ echo $block->getItem()->getQtyOrdered()*1 ?></span>
                </li>
            <?php endif; ?>
            <?php if ($block->getItem()->getQtyShipped() > 0): ?>
                <li class="item">
                    <span class="title"><?php /* @escapeNotVerified */ echo __('Shipped'); ?></span>
                    <span class="content"><?php /* @escapeNotVerified */ echo $block->getItem()->getQtyShipped()*1 ?></span>
                </li>
            <?php endif; ?>
            <?php if ($block->getItem()->getQtyCanceled() > 0): ?>
                <li class="item">
                    <span class="title"><?php /* @escapeNotVerified */ echo __('Canceled'); ?></span>
                    <span class="content"><?php /* @escapeNotVerified */ echo $block->getItem()->getQtyCanceled()*1 ?></span>
                </li>
            <?php endif; ?>
            <?php if ($block->getItem()->getQtyRefunded() > 0): ?>
                <li class="item">
                    <span class="title"><?php /* @escapeNotVerified */ echo __('Refunded'); ?></span>
                    <span class="content"><?php /* @escapeNotVerified */ echo $block->getItem()->getQtyRefunded()*1 ?></span>
                </li>
            <?php endif; ?>
        </ul>
    </td>
    <td class="col subtotal" data-th="<?php echo $block->escapeHtml(__('Subtotal')); ?>">
        <?php echo $block->getItemRowTotalHtml(); ?>
    </td>
</tr>
