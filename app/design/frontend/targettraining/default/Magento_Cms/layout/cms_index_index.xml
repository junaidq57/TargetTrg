<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="top.container">
            <block class="Magento\Cms\Block\Block" name="logo-blk" after="logo">
                <arguments>
                    <argument name="block_id" xsi:type="string">homepage_hero_banner</argument>
                </arguments>
            </block>
            <block class="TargetTraining\EventFinder\Block\Widget" name="top.event.finder" as="top_event_finder"/>

            <referenceBlock name="top.event.finder">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">TargetTraining_EventFinder::widget/home-event-finder.phtml</argument>
                </action>
            </referenceBlock>

        </referenceContainer>
    </body>
</page>
